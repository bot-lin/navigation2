<!--
  his Behavior Tree drives in a square for odometry calibration experiments
-->


<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
  <Sequence name="Go to point precisely">
  <!--<WaitCommand time_allowance="1.0"/> -->
  <ForceSuccess>
        <Sequence>
                <CloseToPose pose_x="0.0" pose_y="0.0" distance="0.2"/>
                 <DriveOnHeading dist_to_travel="0.50" speed="0.1" time_allowance="10.0"/>
        </Sequence>
  </ForceSuccess>

    <RecoveryNode number_of_retries="6" name="NavigateRecovery">
      <PipelineSequence name="NavigateWithReplanning">
        <!-- <RateController hz="1.0">
          <RecoveryNode number_of_retries="1" name="ComputePathToPose">
            <ReactiveSequence>
              <RemovePassedGoals input_goals="{goals}" output_goals="{goals}" radius="0.5"/>
              <ComputePathThroughPoses goals="{goals}" path="{path}" planner_id="{planner_id}"/>
            </ReactiveSequence>
            <ClearEntireCostmap name="ClearGlobalCostmap-Context" service_name="global_costmap/clear_entirely_global_costmap"/>
          </RecoveryNode>
        </RateController> -->

        <RateController hz="1.0">
        <Fallback> 
          <ReactiveSequence>
            <Inverter>
              <GlobalUpdatedGoal/>
            </Inverter>
            <Sequence name="CheckPath">
              <IsPathValid path="{path}"/>
              <RemovePassedGoals input_goals="{goals}" output_goals="{goals}" radius="0.5"/>
            </Sequence>
          </ReactiveSequence>
          <RecoveryNode number_of_retries="1" name="ComputePathToPose">
            <ReactiveSequence>
              <RemovePassedGoals input_goals="{goals}" output_goals="{goals}" radius="0.5"/>
              <Sequence>
                <ComputePathThroughPoses goals="{goals}" path="{path}" planner_id="{planner_id}"/>
                <SmoothPath unsmoothed_path="{path}" smoothed_path="{path}" error_code_id="{smoother_error_code}"/>
              </Sequence>
            </ReactiveSequence>
            <ClearEntireCostmap name="ClearGlobalCostmap-Context" service_name="global_costmap/clear_entirely_global_costmap"/>
          </RecoveryNode>
        </Fallback>
      </RateController>

        <RecoveryNode number_of_retries="1" name="FollowPath">
          <FollowPath path="{path}" controller_id="{controller_id}"/>
          <ClearEntireCostmap name="ClearLocalCostmap-Context" service_name="local_costmap/clear_entirely_local_costmap"/>
        </RecoveryNode>
      </PipelineSequence>
      <ReactiveFallback name="RecoveryFallback">
        <GoalUpdated/>
        <RoundRobin name="RecoveryActions">
          <Sequence name="ClearingActions">
            <ClearEntireCostmap name="ClearLocalCostmap-Subtree" service_name="local_costmap/clear_entirely_local_costmap"/>
            <ClearEntireCostmap name="ClearGlobalCostmap-Subtree" service_name="global_costmap/clear_entirely_global_costmap"/>
           
          </Sequence>
          
          <Wait wait_duration="1"/>
          <!--<BackUp backup_dist="0.30" backup_speed="0.05"/>-->
        </RoundRobin>
      </ReactiveFallback>
    </RecoveryNode>
    <PreciseNav target_tf_frame="odom"  goal="{goal}" is_reverse="{is_reverse}" distance_goal_tolerance="{distance_goal_tolerance}" yaw_goal_tolerance="{yaw_goal_tolerance}" orientation_p="1.0" orientation_i="0.0" orientation_d="0.1" is_heading_only="true"/>
    </Sequence>
  </BehaviorTree>
</root>